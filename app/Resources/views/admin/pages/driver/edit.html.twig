{% extends 'admin/layouts/layout.html.twig' %}

{% block main %}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Driver</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                Add Driver
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-10">
                        <form method="post">

                            {% for flashMessage in app.session.flashbag.get('success') %}

                                <div class="alert alert-success" role="alert">
                                    {{ flashMessage }}
                                </div>

                            {% endfor %}

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input name="name" type="text" class="form-control" id="name" placeholder="Name"
                                           required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input name="email" type="email" class="form-control" id="name" placeholder="Email"
                                           required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Phone Number</label>
                                <div class="col-sm-10">
                                    <input name="phone" type="text" class="form-control" id="name"
                                           placeholder="Phone Number" required>
                                </div>
                            </div>


                            <div class="form-group row">
                                <label for="exampleTextarea" class="col-sm-2 col-form-label">Address</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" name="address" id="address" placeholder="Address"
                                              required></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Age</label>
                                <div class="col-sm-10">
                                    <input name="age" type="text" class="form-control" id="age" placeholder="Age">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Driver Type</label>
                                <div class="col-sm-10">
                                    <select name="drivertype" class="form-control">
                                        <option>Full Time</option>
                                        <option>Part Time</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Expertise</label>
                                <div class="col-sm-10">
                                    <select name="expertise" class="form-control">
                                        <option>Manuel</option>
                                        <option>Automatic</option>
                                        <option>Premium</option>
                                    </select>
                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="col-form-label col-sm-2 pt-0">PCC Submitted</label>
                                <div class="col-sm-10">
                                    <div class="radio">
                                        <label class="col-form-label col-sm-2 pt-0">
                                            <input type="radio" name="pcc" id="optionsRadios1" value="1"
                                                   checked>Yes
                                        </label>
                                        <label class="col-form-label col-sm-2 pt-0">
                                            <input type="radio" name="pcc" id="optionsRadios2"
                                                   value="0">No
                                        </label>
                                    </div>


                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Document Type</label>
                                <div class="col-sm-10">
                                    <select name="document" class="form-control">
                                        <option>Driving Licence</option>
                                        <option>Pan Card</option>
                                        <option>Aadhar</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Document Number</label>
                                <div class="col-sm-10">
                                    <input name="docnumber" type="text" class="form-control" id="name"
                                           placeholder="Document Number">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Driver Assignment</label>
                                <div class="col-sm-10">
                                    <select name="driverassignment" class="form-control">
                                        <option>Monthly</option>
                                        <option>On Demand</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="exampleTextarea" class="col-sm-2 col-form-label">Note</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" name="note" id="note" placeholder="Note"></textarea>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button name="submit" value="1" type="submit" class="btn btn-primary">Update
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>


                {% endblock %}
