{% extends 'admin/layouts/layout.html.twig' %}

{% block main %}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Driver</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                Edit Driver
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-10">
                        <form method="post">

                            {% for flashMessage in app.session.flashbag.get('success') %}
                                <div class="alert alert-success" role="alert">
                                    {{ flashMessage }}
                                </div>
                            {% endfor %}

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input required pattern="[A-Za-z ‘-]{2,}" name="name" type="text" class="form-control" id="name" placeholder="Name" value="{{ data.name }}">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input name="email" type="email" class="form-control" id="name" placeholder="Email" value="{{ data.email }}">
                                </div>
                            </div>

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Phone</label>
                                    <div class="col-sm-10" id="phone-wrapper">

                                        <div class="input-group">
                                            <input pattern="[0-9]{10}" required title="10 digit phone number required" name="phone[]" type="text" class="form-control" placeholder="Phone" value="{{data.phone[0]}}">
                                            <div style="cursor: pointer;" id="add_phone" class="input-group-addon"><i class="fa fa-plus" aria-hidden="true"></i></div>
                                        </div>

                                        {% for key, phone in data.phone %}                                            
                                            {% if key > 0 %}

                                                <div class="input-group">
                                                    <input pattern="[0-9]{10}" required title="10 digit phone number required" name="phone[]" type="text" class="form-control" placeholder="Phone" value="{{phone}}">
                                                    <div style="cursor: pointer;" id="remove_phone" class="input-group-addon"><i class="fa fa-minus" aria-hidden="true"></i></div>
                                                </div>

                                            {% endif %}                                            
                                        {% endfor %}                                                

                                    </div>
                                </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Location</label>
                                <div class="col-sm-10">
                                    <input required pattern="[A-Za-z0-9 ‘-]{2,}" name="location" type="text" class="form-control" id="age" placeholder="Location" value="{{ data.location }}">
                                </div>
                            </div>

                                <div class="form-group row">
                                    <div class="form-inline">
                                        <label class="col-sm-2 col-form-label">Address</label>

                                        <div class="col-sm-10" id="address-wrapper">   
                                            
                                            <div class="input-group">
                                                <div class="form-group" style="width: 25%">
                                                    <input name="house-number[]" type="text" class="form-control" placeholder="House Number" style="width: 100%;" value="{% if data.addresses|length > 0 %} {{data.addresses[0].houseNo}} {% endif %}">
                                                </div>
                                                <div class="form-group" style="width: 25%">
                                                    <input name="street[]" type="text" class="form-control" placeholder="Street" style="width: 100%;" value="{% if data.addresses|length > 0 %}{{data.addresses[0].street}}  {% endif %}">
                                                </div>
                                                <div class="form-group" style="width: 25%">
                                                    <input name="city[]" type="text" class="form-control" placeholder="City" style="width: 100%;" value="{% if data.addresses|length > 0 %} {{data.addresses[0].city}} {% endif %}">
                                                </div>
                                                <div class="form-group" style="width: 24%">
                                                    <input name="landmark[]" type="text" class="form-control" placeholder="Landmark" style="width: 100%;" value="{% if data.addresses|length > 0 %} {{data.addresses[0].landmark}} {% endif %}">
                                                </div>           

                                                <p class="form-control-static">&nbsp;</p>
                                                <div style="cursor: pointer; border-left: 1px solid #ccc;" id="add_address" class="input-group-addon"><i class="fa fa-plus" aria-hidden="true"></i></div>
                                            </div>                                            

                                            {% for key, address in data.addresses %}                                            
                                                {% if key > 0 %}

                                                    <div class="input-group">
                                                        <div class="form-group" style="width: 25%">
                                                            <input name="house-number[]" type="text" class="form-control" placeholder="House Number" style="width: 100%;" value="{{address.HouseNo}}">
                                                        </div>
                                                        <div class="form-group" style="width: 25%">
                                                            <input name="street[]" type="text" class="form-control" placeholder="Street" style="width: 100%;" value="{{address.street}}">
                                                        </div>
                                                        <div class="form-group" style="width: 25%">
                                                            <input name="city[]" type="text" class="form-control" placeholder="City" style="width: 100%;" value="{{address.city}}">
                                                        </div>
                                                        <div class="form-group" style="width: 24%">
                                                            <input name="landmark[]" type="text" class="form-control" placeholder="Landmark" style="width: 100%;" value="{{address.landmark}}">
                                                        </div>           

                                                        <p class="form-control-static">&nbsp;</p>
                                                        <div style="cursor: pointer; border-left: 1px solid #ccc;" id="remove_address" class="input-group-addon"><i class="fa fa-minus" aria-hidden="true"></i></div>
                                                    </div>

                                                {% endif %}                                            
                                            {% endfor %}    
                                        

                                        </div>

                                    </div>
                                </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Age</label>
                                <div class="col-sm-10">
                                    <input name="age" type="text" class="form-control" id="age" placeholder="Age"
                                           value="{{ data.age }}">
                                </div>
                            </div>
                                
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Date of Joining</label>
                                <div class="col-sm-10">
                                    <input name="doj" type="text" class="form-control datepickeronly" id="followup" placeholder="Date of Joining" value="{{ data.doj|date('d-m-Y') }}">
                                </div>
                            </div>  
                               
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Driver Type</label>
                                <div class="col-sm-10">
                                    <label class="checkbox-inline">
                                        <input {% if 1 in data.drivertype %} checked {% endif %} name="drivertype[]" type="checkbox" value="1"> Full Time
                                    </label>
                                   
                                    <label class="checkbox-inline">
                                        <input {% if 2 in data.drivertype %} checked {% endif %} name="drivertype[]" type="checkbox" value="2"> Part Time
                                    </label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Expertise</label>
                                <div class="col-sm-10">
                                    <label class="checkbox-inline">
                                        <input {% if 1 in data.expertise %} checked {% endif %} name="expertise[]" type="checkbox" value="1"> Manuel
                                    </label>
                                    <label class="checkbox-inline">
                                        <input <input {% if 2 in data.expertise %} checked {% endif %}name="expertise[]" type="checkbox" value="2"> Automatic
                                    </label>
                                    <label class="checkbox-inline">
                                        <input <input {% if 3 in data.expertise %} checked {% endif %}name="expertise[]" type="checkbox" value="3"> Premium
                                    </label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-form-label col-sm-2 pt-0">PCC Submitted</label>
                                <div class="col-sm-10">
                                    <div class="radio">
                                        <label class="col-form-label col-sm-2 pt-0">
                                            <input  {% if data.pcc == 1 %} checked {% endif %} type="radio" name="pcc" id="yes" value="1">Yes
                                        </label>
                                        <label class="col-form-label col-sm-2 pt-0">
                                            <input {% if  data.pcc == 0 %} checked {% endif %} type="radio" name="pcc" id="no" value="0">No
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Document Type</label>
                                <div class="col-sm-10">
                                    <label class="checkbox-inline">
                                        <input {% if 1 in data.document %} checked {% endif %} name="document[]" type="checkbox" value="1"> Driving Licence
                                    </label>
                                    <label class="checkbox-inline">
                                        <input {% if 2 in data.document %} checked {% endif %} name="document[]" type="checkbox" value="2"> Pan Card
                                    </label>
                                    <label class="checkbox-inline">
                                        <input {% if 3 in data.document %} checked {% endif %} name="document[]" type="checkbox" value="3"> Aadhar
                                    </label>>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Document Number</label>
                                <div class="col-sm-10">
                                    <input name="docnumber" type="text" class="form-control" id="name"
                                           placeholder="Document Number" value="{{ data.docnumber }}">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Driver Assignment</label>
                                <div class="col-sm-10">
                                    <label class="checkbox-inline">
                                        <input {% if 1 in data.driverassignment %} checked {% endif %} name="driverassignment[]" type="checkbox" value="1"> Monthly
                                    </label>
                                    <label class="checkbox-inline">
                                        <input {% if 2 in data.driverassignment %} checked {% endif %} name="driverassignment[]" type="checkbox" value="2"> On Demand
                                    </label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="exampleTextarea" class="col-sm-2 col-form-label">Note</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" name="note" id="note"
                                              placeholder="Note">{{ data.note }}</textarea>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button name="submit" value="1" type="submit" class="btn btn-primary">Update
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



                {% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script>

        $(document).ready(function () {

             addPhone();
             addAddress();

        });
        
        function addAddress(){
            //Address add/remove
            var wrapperAddress = $('#address-wrapper'); //Input field wrapper
            var fieldHTML = '<div class="input-group"><div class="form-group" style="width: 25%"><input name="house-number[]" type="text" class="form-control" placeholder="House Number" style="width: 100%;"></div><div class="form-group" style="width: 25%"><input name="street[]" type="text" class="form-control" placeholder="Street" style="width: 100%;"></div><div class="form-group" style="width: 25%"><input name="city[]" type="text" class="form-control" placeholder="City" style="width: 100%;"></div><div class="form-group" style="width: 24%"><input name="landmark[]" type="text" class="form-control" placeholder="Landmark" style="width: 100%;"></div><p class="form-control-static">&nbsp;</p><div style="cursor: pointer; border-left: 1px solid #ccc;" id="remove_address" class="input-group-addon"><i class="fa fa-minus" aria-hidden="true"></i></div></div>';

            //Once add button is clicked
            $($('#add_address')).click(function () {
                //Check maximum number of input fields
                $(wrapperAddress).append(fieldHTML); //Add field html
            });

            //Once remove button is clicked
            $(wrapperAddress).on('click', '#remove_address', function (e) {
                e.preventDefault();
                $(this).parent('.input-group').remove(); //Remove field html
            });            
        }
        
        function addPhone(){
            var maxField = 20; //Input fields increment limitation
            var wrapper = $('#phone-wrapper'); //Input field wrapper
            var fieldHTML = '<div class="input-group"><input pattern="[0-9]{10}" required title="10 digit phone number required" name="phone[]" type="text" class="form-control" placeholder="Phone"><div style="cursor: pointer;" id="remove_phone" class="input-group-addon"><i class="fa fa-minus" aria-hidden="true"></i></div></div>';
            var x = 1; //Initial field counter is 1

            //Once add button is clicked
            $($('#add_phone')).click(function () {
                //Check maximum number of input fields
                if (x < maxField) {
                    x++; //Increment field counter
                    $(wrapper).append(fieldHTML); //Add field html
                }
            });

            //Once remove button is clicked
            $(wrapper).on('click', '#remove_phone', function (e) {
                e.preventDefault();
                $(this).parent('.input-group').remove(); //Remove field html
            });            
        }


    </script>

{% endblock %}
                
{% block stylesheets %}
    {{ parent() }}
    
    <style>
    #address-wrapper .input-group{
        width: 100%;
    }
    </style>
    
{% endblock %}