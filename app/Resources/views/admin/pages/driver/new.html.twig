{% extends 'admin/layouts/layout.html.twig' %}

{% block main %}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Driver</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                Add Driver
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-10">
                        <form>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="name" placeholder="Name" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="exampleTextarea" class="col-sm-2 col-form-label">Address</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" id="address" placeholder="Address" required ></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Age</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="age" placeholder="Age">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Driver Type</label>
                                <div class="col-sm-10">
                                    <select class="form-control" >
                                        <option>Full Time</option>
                                        <option>Part Time</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Expertise</label>
                                <div class="col-sm-10">
                                    <select class="form-control" >
                                        <option>Manuel</option>
                                        <option>Automatic</option>
                                        <option>Premium</option>
                                    </select>
                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="col-form-label col-sm-2 pt-0">PCC</label>
                                <div class="col-sm-10">
                                    <div class="radio">
                                        <label>
                                            <input type="radio" name="optionsRadios" id="optionsRadios1" value="yes"
                                                   checked>Yes
                                        </label>
                                    </div>
                                    <div class="radio">
                                        <label>
                                            <input type="radio" name="optionsRadios" id="optionsRadios2"
                                                   value="option2">No
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Document Type</label>
                                <div class="col-sm-10">
                                    <select class="form-control">
                                        <option>Driving Licence</option>
                                        <option>Pan Card</option>
                                        <option>Aadhar</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Document Number</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="name" placeholder="Document Number">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Driver Assignment</label>
                                <div class="col-sm-10">
                                    <select class="form-control">
                                        <option>Monthly</option>
                                        <option>On Demand</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="exampleTextarea" class="col-sm-2 col-form-label">Note</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" id="address" placeholder="Note"></textarea>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Create</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>


                {% endblock %}
