{% extends 'admin/layouts/layout.html.twig' %}

{% block main %}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Lead</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                Edit Lead
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-10">
                        <form method="post">

                            {% for flashMessage in app.session.flashbag.get('success') %}

                                <div class="alert alert-success" role="alert">
                                    {{ flashMessage }}
                                </div>

                            {% endfor %}

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input name="name" type="text" class="form-control" id="name" placeholder="Name"  value="{{data.name}}"
                                           >
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input name="email" type="email" class="form-control" id="name" placeholder="Email" value="{{data.email}}"
                                           >
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Phone Number</label>
                                <div class="col-sm-10">
                                    <input name="phone" type="text" class="form-control" id="name"
                                           placeholder="Phone Number" value="{{data.phone}}" required>
                                </div>
                            </div>


                            <div class="form-group row">
                                <label for="exampleTextarea" class="col-sm-2 col-form-label">Address</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" name="address" id="address" placeholder="Address"
                                              >{{data.address}}</textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Location</label>
                                <div class="col-sm-10">
                                    <input name="age" type="text" class="form-control" id="age" placeholder="Location" value="{{data.location}}">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Status</label>
                                <div class="col-sm-10">
                                    <select name="status" class="form-control">
                                        <option value="1">Interested</option>
                                        <option value="2">Not Interested</option>
                                        <option value="3">Cancelled</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Followup</label>
                                <div class="col-sm-10">
                                    <input name="followup" type="text" class="form-control datepicker" id="followup" placeholder="Followup" value="{{ data.followupDate|date('m/d/Y') }}">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="exampleTextarea" class="col-sm-2 col-form-label">Feedback</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" name="feedback" id="feedback" placeholder="Feedback"
                                              required>{{data.feedback}}</textarea>
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button name="submit" value="1" type="submit" class="btn btn-primary">Update
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>


                {% endblock %}
