{% extends 'admin/layouts/layout.html.twig' %}

{% block main %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cancellation Reports</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Cancellation Reports
                </div>
                <div class="panel-body">


                    {% for flashMessage in app.session.flashbag.get('success') %}    

                        <div class="alert alert-success" role="alert">
                            {{ flashMessage }}
                        </div>    

                    {% endfor %}

                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Customer Name</th>
                                        <th scope="col">Cancelled By</th>
                                        <th scope="col">Reason</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in data %}
                                        <tr>
                                           
                                            <td>{{ item[0]['name'] }}</td>
                                            <td>
                                                {% for row in item %}
                                                    {{row['cancelledBy']}} <hr>
                                                          {% endfor %}
                                                     <td>
                                                {% for row in item %}
                                                    {{row['reason']}} <hr>
                                                {% endfor %}
                                            </td>
                                            
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="6" align="center">No Items Found</td>
                                        </tr>
                                    {% endfor %}
                                    
                                </tbody>
                            </table>
                                     <div class="navigation">
                                {{ knp_pagination_render(data) }}
                            </div>
                            
                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

{% endblock %}
