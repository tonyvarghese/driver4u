{% extends 'admin/layouts/layout.html.twig' %}

{% block main %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Driver's Trips</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Driver's drives taken Reports
                </div>
                <div class="panel-body">


                    {% for flashMessage in app.session.flashbag.get('success') %}    

                        <div class="alert alert-success" role="alert">
                            {{ flashMessage }}
                        </div>    

                    {% endfor %}
                    
                    <form method='post'>
                        <div class="row" style="margin-bottom: 50px;">
                            <div class="col-lg-2">
                                <input required name="start" type="text" class="datepickeronly form-control" placeholder="Start Date" value = "{{ start }}">
                            </div>   
                            <div class="col-lg-2">
                                <input required name="end" type="text" class="datepickeronly form-control" placeholder="End Date" value = "{{ end }}">
                            </div> 
                            <div class="col-lg-1">                            
                                <button class="btn btn-primary">GO</button>
                            </div>
                        </div>    
                    </form>

                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Driver Name</th>
                                        <th scope="col">Trips</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in trips %}
                                        <tr>
                                           
                                            <td>{% if item.trip.driver|length > 0 %} {{item.trip.driver.fullName}} {% endif %}</td>
                                            <td>{{ item.total}} </td>
                                            
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="6" align="center">No Items Found</td>
                                        </tr>
                                    {% endfor %}
                                    
                                </tbody>
                            </table>
                                    
                                     <div class="navigation">
                                {{ knp_pagination_render(trips) }}
                            </div>
                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

{% endblock %}

