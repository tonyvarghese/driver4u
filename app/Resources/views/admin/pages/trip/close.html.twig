{% extends 'admin/layouts/layout.html.twig' %}

{% block main %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Close Trip</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Close Trip
                </div>
                <div class="panel-body">
                    <div class="row">

                        <div class="col-lg-6 ">

                            <form method="post">

                                {% for flashMessage in app.session.flashbag.get('success') %}    

                                    <div class="alert alert-success" role="alert">
                                        {{ flashMessage }}
                                    </div>    

                                {% endfor %}
                                
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Started Time</label>
                                    <div class="col-sm-10">
                                        <input value="{{ trip.startedTime|date('d-m-Y H:i') }}" name="stime" type="text" class=" datetimepicker form-control" placeholder="Select Time">
                                    </div>
                                </div>
                                    
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Ended Time</label>
                                    <div class="col-sm-10">
                                        <input value="{{ trip.endedTime|date('d-m-Y H:i') }}" name="etime" type="text" class=" datetimepicker form-control" placeholder="Select Time">
                                    </div>
                                </div>
                                    
                                    
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Amount Collected</label>
                                    <div class="col-sm-10">
                                        <input value="{{ trip.amountCollected }}" name="amount" type="number" class="form-control" placeholder="Amount Collected">
                                    </div>
                                </div>
                                    
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Feedback</label>
                                    <div class="col-sm-10">
                                        <textarea class="form-control" name="feedback" placeholder="Feedback">{{ trip.feedback }}</textarea>
                                    </div>
                                </div>
                                
                                                       
                                            
                                <div class="form-group row">
                                    <div class="col-sm-10">
                                        <button name="submit" type="submit" class="btn btn-primary">SUBMIT</button>
                                    </div>
                                </div>
                            </form>


                        </div>
                        <div class="col-lg-6 ">
                            <table class="table table-user-information">
                                <tbody>
                                    <tr>
                                        <td><strong>Customer</strong></td>
                                        <td>{{ trip.customer.fullName }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Driver</strong></td>
                                        <td>{% if trip.driver|length > 0 %} {{trip.driver.fullName}} {% endif %}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Scheduled Time</strong></td>
                                        <td>{{ trip.scheduledTime|date('d-m-Y H:i') }}</td>
                                    </tr>                                    
                                    <tr>
                                        <td><strong>Location</strong></td>
                                        <td>{{ trip.location }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Rate</strong></td>
                                        <td>{{trip.rate}}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Discount</strong></td>
                                        <td>{{trip.discount}}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Status</strong></td>
                                        <td>{{ status[trip.status] }}</td>
                                    </tr>

                                </tbody>
                            </table>                                                            

                        </div>                                     

                    </div>


                {% endblock %}
